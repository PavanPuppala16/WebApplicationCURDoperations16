@using WebApplicationCURDoperations16.Models
@model INVOICE_MODEL
@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>REGISTER</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="signup-form mt-5 border p-4 bg-light shadow">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="mb-5 text-secondary">Create Your Account</h4>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label>Eqipment<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.equipment, new { @class = "form-control", placeholder="Enter Equipment" })

                            </div>
                            <div class="mb-3 col-md-6">
                                <label> cartype<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.cartype, new { @class = "form-control", placeholder="Enter Cartype" })

                            </div>

                            <div class="mb-3 col-md-6">
                                <label>Notified<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Notified, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Notified"} })

                            </div>
                            <div class="mb-3 col-md-6">
                                <label>Credits<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.credits, new { @class = "form-control", placeholder="Enter Credits" })

                            </div>
                            <div class="mb-3 col-md-6">
                                <label>Days<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.dates, new { @class = "form-control", placeholder="Enter Days" })

                            </div>

                            <div class="col-md-5">
                                <input type="submit" class="btn btn-primary float-end" onClick="conf()" />

                            </div>
                        </div>
                        @Html.ActionLink("get all data","GETALLDATA","CURD")
                 
                        @Html.ActionLink("update","UPDATE","CURD")
                        @Html.ActionLink("update","DELETED","CURD")
                    }

                </div>
</body>
</html>